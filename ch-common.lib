#!/bin/sh

sudoIfNotRoot(){
	if [ $USER != 'root' ]; then
		echo "Vous n'êtes pas root, execution du script en sudo"
		sudo $0
		exit
	fi
}

checkNotRoot(){
	if [ $USER = 'root' ]; then
		echo "You are root ! Please use your real identity !"
		exit
	fi
}

displayTitle(){
	echo "\033[33m> \033[1m" $1 "\033[0m"
}
displaySubtitle(){
	echo "\033[33m» " $1 "\033[0m"
}

yesOrNo(){
	local message
	local default
	if [ "$2" = "y" ]; then message="$1 [Y/n]"; default='yes';
	elif [ "$2" = "n" ]; then message="$1 [y/N]"; default='no';
	else message="$1 [y/n]"; default=false;
	fi

	local yesNoAnswer=''
	while [ -n $yesNoAnswer ]; do
		read -p "$message " yesNoAnswer
		case $yesNoAnswer in
			[yY]|[yY][eE][sS])
				echo 'yes'
				exit
			;;
			[nN]|[nN][oO])
				echo 'no'
				exit
			;;
			'')
				if $default; then
					echo "$default"
					exit
				fi
			;;
		esac
	done
}
